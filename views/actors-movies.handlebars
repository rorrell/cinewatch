<script src="/js/actormovies.js"></script>
<div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="confirmationTitle" aria-modal="true" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="confirmationTitle">Confirmation</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Changes saved!
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="d-flex flex-column justify-content-between align-items-center mt-5 form-group">
    <label for="actorMoviesSelect">Actors</label>
    <select id="actorMoviesSelect" onchange="loadMovies()" class="mb-3">
            <option value="">Select an Actor</option>
        {{#each actors}}
            <option value="{{actorID}}">{{name}}</option>
        {{/each}}
    </select>
    <div id="movieDiv" hidden="true">
        <div class="d-flex flex-column">
            <label for="movieSelect">Movies</label>
            <select id="movieSelect" multiple>
                {{#each movies}}
                    <option value="{{movieID}}">{{name}}</option>
                {{/each}}
            </select>
            <button type="button" id="submit" onclick="saveMovies()" class="btn btn-primary my-3">Save</button>
        </div>
    </div>
</div>