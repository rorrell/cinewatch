<script src="/js/genres.js"></script>
<div id="movieModal" class="modal fade" aria-hidden="true" aria-labelledby="modalLabel" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 id="modalLabel" class="modal-title">Header</h1>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div id="modalBody" class="modal-body">
                <div id="modalParagraph"></div>
                <select multiple id="movieSelect" hidden>
                    {{#each movies}}
                        <option value="{{movieID}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="d-flex flex-row justify-content-around align-items-start mt-5">
    <div>
        <form id="formNew" method="post" action="/genres" class="d-flex flex-column align-items-center">
            <h1 class="form-legend">Add new genre</h1>
            <div class="form-group">
                <label for="textNew">Title</label>
                <input type="text" class="form-control" id="textNew" name="title" placeholder="Comedy" />
            </div>
            <button type="submit" class="btn btn-primary mx-2">Save</button>
        </form>
    </div>
    <div>
        <table id="genreTable" class="table table-light table-striped">
            <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Movies</th>
                <th>&nbsp;</th>
            </tr>
            </thead>
            {{#each genres}}
                <tr id="row{{genreID}}">
                    <form id="form{{genreID}}" method="post" action="/genre/{{genreID}}">
                    <td>{{title}}</td>
                    <td><button type="button" class="btn btn-info" data-toggle="modal" data-target="#movieModal" data-movies="{{movieList}}" data-movieIDs="{{movieIDs}}" data-mode="view">View</button></td>
                    <td>
                        <div class="d-flex flex-row-reverse">
                            <button type="button" class="btn btn-secondary" onclick="deleteGenre({{genreID}})">Delete</button>
                            <button type="button" class="btn btn-primary mx-2" onclick="updateGenre({{genreID}})">Update</button>
                        </div>
                    </td>
                    </form>
                </tr>
            {{/each}}
        </table>
    </div>
</div>