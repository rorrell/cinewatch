<form id="login-form">
    <legend>Login</legend>
    <div class="form-group">
        <label for="uid-login">Username</label>
        <input type="text" class="form-control" id="uid-login">
    </div>
    <div class="form-group">
        <label for="pass-login">Password</label>
        <input type="password" class="form-control" id="pass-login">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <br>
    <br>
    <p>Forgot your Username or Password? <a href="/recovery">Click here</a></p>
</form>